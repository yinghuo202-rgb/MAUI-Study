<?xml version="1.0" encoding="utf-8" ?>
<!--
    MainPage.xaml defines the visual layout for the application's main page.
    The page displays a greeting, a numeric counter, and a button that updates the counter.
    This XAML is compatible across Android, iOS, macOS, and Windows when used in a .NET MAUI project.
-->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIStudy.MainPage"
             Title="Counter">
    <ContentPage.Content>
        <!--
            A vertical stack layout centers its children both horizontally and vertically.
            The spacing and padding ensure comfortable separation between the controls.
        -->
        <VerticalStackLayout HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="24"
                             Padding="24">
            <!-- Greeting label shown at the top of the page. -->
            <Label Text="Hello, World!"
                   FontSize="24"
                   HorizontalTextAlignment="Center" />

            <!-- Label that displays the current counter value. -->
            <Label x:Name="CounterLabel"
                   Text="0"
                   FontSize="48"
                   HorizontalTextAlignment="Center" />

            <!-- Button that increments the counter when clicked. -->
            <Button Text="Tap to Increment"
                    Clicked="OnCounterClicked"
                    HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
